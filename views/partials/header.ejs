<script type="module" src="/js/main.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script type="importmap">
{
    "imports": {
    "axios": "https://cdn.skypack.dev/axios"
    }
}
</script>
<header>
    <h1 class="heading-nav">Postr</h1>
    <nav class="site-nav">
        <div class="nav-right"></div>
    </nav>
    <div class="user-profile">
        <span>
            <a class="username-link" href="/profile">username</a>
        </span>
        <div class="profile-pic"></div>
    </div>
    <style>
        
        header {
            display: flex;
            position: fixed;
            z-index: 1051;
            width: 100%;
            padding: 0.5em;
            padding-left: 50px; 
            padding-right: 50px; 
            justify-content: space-between;
            border-bottom: 2px solid #DDDBFF;
            background-color: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        .site-nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: 1em;
            padding-bottom: 1em;
        }
        .heading-nav {
            border-bottom: 3px solid var(--primary);
            padding-bottom: 0.3rem;
        }
        .nav-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        .site-nav ul {
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
        }
        .site-nav ul li {
            list-style-type: none;
        }
        .site-nav ul li a {
            color: #9893D8;
            text-decoration: none;
            font-size: 1em;
        }
        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .profile-pic {
            width: 40px;
            height: 40px;
            background-color: #DDDBFF;
            border-radius: 50%;
        }

        .username-link {
            display: inline-block; 
            transition: transform 0.2s ease;
            padding-right: 0.3em;
        }

        .username-link:hover {
            transform: translateY(-3px); 
        }

        .username-link:active {
            transform: translateY(3px); 
        }
    </style>
</header>