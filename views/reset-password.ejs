<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Postr - Reset Password</title>
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
</head>

<body>
  <%- include('partials/header') %>
    <script type="module" src="/js/main.js"></script>
    <script type="module" src="/js/login.js"></script>
    <div class="wrapper">
      <div class="form-box reset-password">
        <form>
          <h1 class="form-title">Reset Password</h1>
          <div class="input-box">
            <div class="input-wrapper">
              <input id="resetEmail" type="email" placeholder="Enter your email" required />
              <i class="bx bxs-envelope"></i>
            </div>
            <div class="input-wrapper">
              <input id="oldPassword" type="password" placeholder="Enter your old password" required />
              <i class="bx bxs-lock-alt"></i>
            </div>
            <div class="input-wrapper">
              <input id="newPassword" type="password" placeholder="Enter your new password" required />
              <i class="bx bxs-lock-alt"></i>
            </div>
          </div>
          <button class="btn reset-submit" type="button">Reset Password</button>
          <p class="back-to-login">
            <a href="/login">Back to Login</a>
          </p>
        </form>
      </div>
    </div>
    <%- include('partials/footer') %>
      <style>
        @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap");

        .back-to-login {
          margin-top: 1em;
        }

        * {
          box-sizing: border-box;
          text-decoration: none;
          list-style: none;
        }

        .form-title {
          font-weight: bold;
          color: #9893d8;
        }

        :root {
          --primary: #2f27ce;
          --secondary: #dedcff;
          --background: #000000;
        }

        body,
        p,
        a,
        ul,
        li {
          margin: 0;
          padding: 0;
          text-decoration: none;
        }

        li {
          list-style-type: none;
        }

        body {
          background: var(--background);
          overflow-x: hidden;
          font-family: "Inter", sans-serif;
          justify-content: space-between;
          align-items: center;
          min-height: 100vh;
          background: var(--background);
          height: 100%;
          margin: 0;
          flex-direction: column;
        }

        .wrapper {
          flex: 1;
          /* This will allow it to grow and push the footer down */
          display: flex;
          justify-content: center;
          /* Center the container horizontally */
          align-items: center;
          /* Center the container vertically */
          padding: 20px;
          width: 100%;
          height: 80%;
        }

        .container {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          width: 850px;
          height: 550px;
          background: #fff;
          border-radius: 1em;
          box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
          overflow: hidden;
          flex: 1;
        }

        .containeer h1 {
          font-size: 36px;
          margin: -10px 0;
        }

        .container p {
          font-size: 14.5px;
          margin: 15px 0;
        }

        form {
          width: 100%;
        }

        .form-box {
          width: 22em;
          background: #fff;
          display: flex;
          align-items: center;
          color: #333;
          text-align: center;
          padding: 40px;
          z-index: 1;
          border-radius: 1em;
        }

        .container.active .form-box {
          right: 50%;
        }

        .form-box.register {
          display: flex;
          justify-content: space-around;
          visibility: hidden;
          padding-bottom: 2em;
        }

        .form-box.login {
          display: flex;
          justify-content: space-around;
        }

        .container.active .form-box.register {
          visibility: visible;
        }

        .input-box {
          position: relative;
          margin: 30px 0;
        }

        .input-box input {
          width: 100%;
          padding: 13px 50px 13px 20px;
          background: #eee;
          border-radius: 8px;
          border: none;
          outline: none;
          font-size: 16px;
          color: #333;
          font-weight: 500;
        }

        .input-box input::placeholder {
          color: #888;
          font-weight: 400;
        }

        .input-box i {
          position: absolute;
          right: 20px;
          top: 50%;
          transform: translateY(-50%);
          font-size: 20px;
        }

        .reset-link {
          margin: -15px 0 15px;
        }

        .reset-link a {
          font-size: 14.5px;
          color: #333;
        }

        .btn {
          width: 100%;
          height: 48px;
          background: #7494ec;
          border-radius: 8px;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
          border: none;
          cursor: pointer;
          font-size: 16px;
          color: #fff;
          font-weight: 600;
        }

        .social-icons {
          display: flex;
          justify-content: center;
        }

        .social-icons a {
          display: inline-flex;
          padding: 10px;
          border: 2px solid #ccc;
          border-radius: 8px;
          font-size: 24px;
          color: #333;
          margin: 0 8px;
        }

        .toggle-box {
          position: absolute;
          width: 100%;
          height: 100%;
        }

        .toggle-box::before {
          content: "";
          position: absolute;
          left: -250%;
          width: 300%;
          height: 100%;
          background: var(--primary);
          /* border: 2px solid red; */
          z-index: 2;
          transition: 1s ease-in-out;
        }

        .container.active .toggle-box::before {
          left: 50%;
        }

        .toggle-panel {
          position: absolute;
          width: 50%;
          height: 100%;
          /* background: seagreen */
          color: #fff;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          z-index: 2;
          transition: 0.6s ease-in-out;
        }

        .toggle-panel.toggle-left {
          left: 0;
          transition-delay: 1.2s;
        }

        .container.active .toggle-panel.toggle-left {
          left: -50%;
          transition-delay: 0.6s;
        }

        .toggle-panel.toggle-right {
          right: -50%;
          transition-delay: 0.6;
        }

        .container.active .toggle-panel.toggle-right {
          right: 0;
          transition-delay: 1.2s;
        }

        .toggle-panel p {
          margin-bottom: 20px;
        }

        .toggle-panel .btn {
          width: 160px;
          height: 46px;
          background: transparent;
          border: 2px solid #fff;
          box-shadow: none;
        }

        @media screen and (max-width: 650px) {
          .container {
            position: relative;
            top: 0;
            left: 0;
            transform: none;
            width: 90%;
            max-width: 400px;
            height: auto;
            margin: 40px auto;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
          }

          .form-box {
            position: relative;
            width: 100%;
            height: auto;
            padding: 20px;
            transition: none;
          }

          .form-box.login,
          .form-box.register {
            display: none;
          }

          .container:not(.active) .form-box.login {
            display: block;
          }

          .container.active .form-box.register {
            display: block;
          }

          .container.active .form-box {
            right: 0;
          }

          .toggle-box {
            display: none;
          }
        }

        @media screen and (max-width: 400px) {
          .form-box {
            padding: 20px;
          }

          .toggle-panel h1 {
            font-size: 30px;
          }
        }

        h1,
        h2,
        h3,
        h4 {
          color: #dddbff;
          font-weight: normal;
        }

        p,
        a,
        li {
          color: #9893d8;
        }

        h1,
        h3 {
          font-size: 1.2em;
        }

        h2 {
          font-size: 1.6em;
        }

        h4 {
          font-size: 1.1em;
        }

        .leading {
          font-size: 1.1em;
        }

        .grid {
          display: grid;
          grid-template-columns: repeat(8, 1fr);
          gap: 10px;
          box-sizing: border-box;
        }

        /* small tablet styles */
        footer {
          background-size: 20%;
        }

        #multimedia {
          background-color: #07083e;
          padding: 30px 20px;
        }

        /* large tablet & small laptop styles */
        @media (min-width: 960px) {
          body {
            font-size: 18px;
          }

          .grid {
            width: 100%;
            max-width: 1060px;
            margin: 0 auto;
          }

          .leading {
            margin: 20px 0;
          }

          .site-nav {
            padding: 0 20px;
          }

          .site-nav h1 {
            grid-column: 1/3;
          }

          .site-nav ul {
            display: flex;
            grid-column: 6/9;
            justify-content: flex-end;
            align-self: center;
            text-decoration: none;
          }

          .site-nav ul li::after {
            content: "";
            width: 0%;
            height: 2px;
            background: var(--primary);
            display: block;
            margin: auto;
            transition: 0.5s;
          }

          .site-nav ul li:hover::after {
            width: 100%;
          }

          .site-nav li {
            margin-left: 20px;
          }

          footer {
            padding: 40px 20px;
            background-size: 25%;
          }

          #multimedia {
            background-color: #07083e;
            padding: 30px 20px;
          }
        }

        @media (min-width: 1100px) {
          body {
            font-size: 20px;
          }

          footer {
            padding: 80px 0;
            background-size: 30%;
          }

          footer img {
            width: 30px;
          }

          #multimedia {
            background-color: #07083e;
            background-image: url(Pictures/alien.webp);
            background-size: 40%;
            background-repeat: no-repeat;
            background-position: right;
            padding: 30px 20px;
          }
        }

        .input-wrapper {
          position: relative;
          margin-bottom: 15px;
        }

        .input-wrapper input {
          width: 100%;
          padding: 13px 50px 13px 20px;
          background: #eee;
          border-radius: 8px;
          border: none;
          outline: none;
          font-size: 16px;
          color: #333;
          font-weight: 500;
        }

        .input-wrapper input::placeholder {
          font-weight: 400;
        }

        .input-wrapper i {
          position: absolute;
          right: 20px;
          top: 50%;
          transform: translateY(-50%);
          font-size: 20px;
        }
      </style>
</body>

</html>